# MuRP Environment Variables Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_DB_PASSWORD=your-postgres-password

# =============================================================================
# BILLING & PRICING PREVIEW CONTROLS
# =============================================================================
VITE_SHOW_NEW_PRICING=false
VITE_BILLING_LIVE=false

# =============================================================================
# STRIPE BILLING (Configure before enabling billing)
# =============================================================================
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
BILLING_PORTAL_RETURN_URL=https://app.murp.io/settings
STRIPE_PRICE_BASIC_MONTHLY=
STRIPE_PRICE_BASIC_YEARLY=
STRIPE_PRICE_OPS_POD_MONTHLY=
STRIPE_PRICE_OPS_POD_YEARLY=
STRIPE_PRICE_FULL_AI_MONTHLY=
STRIPE_PRICE_FULL_AI_YEARLY=
STRIPE_PRICE_ENTERPRISE_MONTHLY=
STRIPE_PRICE_ENTERPRISE_YEARLY=

# =============================================================================
# GOOGLE SHEETS + OAUTH
# =============================================================================
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://murp.app/auth/callback

# =============================================================================
# GOOGLE GEMINI AI (Fallback for Basic Tier)
# =============================================================================
VITE_GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# VERCEL AI GATEWAY (Optional, used for enterprise tiers)
# =============================================================================
VITE_AI_GATEWAY_BASE_URL=https://ai-gateway.vercel.sh/v1/ai
AI_GATEWAY_API_KEY=vck_your_api_key_here

# =============================================================================
# APP CONFIGURATION
# =============================================================================
VITE_SECURE_API_BASE_URL=/api/proxy
VITE_SECURE_API_TIMEOUT_MS=15000
NEXT_PUBLIC_APP_URL=http://localhost:5173
NODE_ENV=development

# =============================================================================
# FINALE INVENTORY CONFIGURATION
# =============================================================================
VITE_FINALE_API_KEY=your-finale-api-key
VITE_FINALE_API_SECRET=your-finale-api-secret
VITE_FINALE_ACCOUNT_PATH=your-account-path
VITE_FINALE_BASE_URL=https://app.finaleinventory.com
FINALE_VENDORS_REPORT_URL=https://app.finaleinventory.com/your-vendors-csv-url
FINALE_INVENTORY_REPORT_URL=https://app.finaleinventory.com/your-inventory-csv-url
FINALE_BOM_REPORT_URL=https://app.finaleinventory.com/your-bom-csv-url

# =============================================================================
# CRON JOB SECURITY
# =============================================================================
CRON_SECRET=generate-random-secret-here

# =============================================================================
# EMAIL & NOTIFICATIONS (Optional)
# =============================================================================
RESEND_API_KEY=your-resend-key-here
SLACK_WEBHOOK_URL=your-slack-webhook-url

# =============================================================================
# VERCEL PROJECT (Optional)
# =============================================================================
VERCEL_PROJECT_ID=your-project-id

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to git (already ignored)
# 2. Set production variables in Vercel Dashboard > Settings > Environment Variables
# 3. Restart dev server after changing environment variables
