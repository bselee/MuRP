{
  "name": "murp-tests",
  "version": "1.0.0",
  "description": "Test suite for MuRP BOM & Purchasing Engine",
  "private": true,
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage --reporter=json --reporter=text",
    "test:debug": "vitest --inspect-brk --pool=threads --poolOptions.threads.singleThread",
    "test:snapshots": "vitest -u",
    "typecheck": "tsc --noEmit",
    "test:bom": "vitest bom/",
    "test:inventory": "vitest inventory/",
    "test:purchasing": "vitest purchasing/",
    "test:forecasting": "vitest forecasting/",
    "test:integration": "vitest integration/",
    "test:scenarios": "vitest scenarios/",
    "test:reorder": "vitest -t 'reorder|ROP|safety stock'",
    "test:critical": "vitest -t 'quantity_per_parent|shortage identification|PAST date|spring rush'",
    "test:regression": "vitest -t 'REG-'",
    "test:timezone": "vitest -t 'timezone|TZ|America/Denver'"
  },
  "devDependencies": {
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "typescript": "^5.3.0",
    "date-fns": "^3.0.0",
    "date-fns-tz": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
